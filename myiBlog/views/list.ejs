<%- include ./common/header.ejs  %>
<div class="container-fluid">
    <div class="col-sm-10 col-sm-offset-1" style="margin-top:50px;">
       
        <div class="panel panel-default" >
            <div class="panel-heading" style="height: 105px; color: #ffff; font-size: 21px; background: linear-gradient(to top right, #CDDC39 0%, #8BC34A 25%, #FFEB3B 100%);" >
              <span >内容列表</span> 
              <div>
                   <a href="/loginout" class="but btn-info" style="margin-left: 816px; background: none; color:#CDDC39; ">点击退出</a>
              </div> 
              
              <div class="panel-body">
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped ">
                <thead>
                    <tr>
                        <th>编号</th>
                        <th>作者</th>
                        <th>标题</th>
                        <th>内容</th>
                        <th>创建时间</th>
                        <th>修改时间</th>
                        <th class="text-center">操作</th>
                    </tr>
                </thead>
                <tbody>

                    <% for(var i=0/;i<arr.length;i++){  %>
                    <tr>
                        <td><%=i+1%></td>
                        <td><%=arr[i].username%></td>
                        <td><%=arr[i].title%></td>
                        <td><%=arr[i].description%></td>
                        <td><%=moment(arr[i].createAt).format('YYYY/MM/DD HH:mm:ss')%></td>
                        <td><%=moment(arr[i].updateAt).format('YYYY/MM/DD HH:mm:ss')%></td>
                        <td class="text-center">
                            <a href="/product/update/<%=arr[i].id%>" class="btn btn-success" style="background-color: #8BC34A">修改</a>
                            <a href="/product/delete/<%=arr[i].id%>" class="btn btn-danger" style="background-color: #8BC34A; border-color:#8bc34a;">删除</a>
                        </td>
                    </tr>
                    <% }%>
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>

<%- include  ./common/footer.ejs  %>